@{
    ViewData["Title"] = "New Product";
}
@model Product

<div class="text-center">
    <form asp-action="CreateProduct" asp-controller= "Home" method ="post">
        <div class = "mb-3">
            <label asp-for="Name" class = "form-label">Product Name:</label>
            <input asp-for= "Name" class = "form-control">
            <span asp-validation-for= "Name" class= "text-danger"></span>
        </div>
        <div class = "mb-3">
            <label asp-for="Price" class = "form-label">Price:</label>
            <input asp-for= "Price" class = "form-control">
            <span asp-validation-for= "Price" class= "text-danger"></span>
        </div>
        <div class = "mb-3">
            <label asp-for="Description" class = "form-label">Description:</label>
            <textarea asp-for ="Description" placeholder="required.." style ="height=200px" class="form-control"></textarea>
            <span asp-validation-for= "Description" class= "text-danger"></span>
        </div>
        <input type="submit" value="Create" class="btn btn-primary m-3">
    </form>

</div>
